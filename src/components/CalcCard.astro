---
interface Props {
    title: string;
    badge?: string;
    class?: string;
}

const { title, badge, class: className } = Astro.props;
---

<div class:list={["calc-card", className]}>
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-bold text-white tracking-tight">
            {title}
        </h2>
        {badge && <div class="calc-badge">{badge}</div>}
    </div>

    <div class="space-y-6">
        <slot />
    </div>
</div>
