---
interface Props {
  id: string;
  label: string;
  type?: any; // Using any to avoid export issue, or just string
  value?: string | number;
  step?: string | number;
  min?: string | number;
  max?: string | number;
  placeholder?: string;
  unit?: string;
}

const {
  id,
  label,
  type = "number",
  value = "",
  step,
  min,
  max,
  placeholder = "",
  unit,
} = Astro.props;
---

<div class="space-y-1">
  <label for={id} class="calc-label">
    {label}
  </label>

  <div class="relative">
    <input
      id={id}
      type={type}
      value={value}
      step={step}
      min={min}
      max={max}
      placeholder={placeholder}
      class="calc-input pr-10"
    />

    {
      unit && (
        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-xs text-slate-500 pointer-events-none font-mono">
          {unit}
        </span>
      )
    }
  </div>
</div>
